<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error" monitorInterval="30">
    <properties>
        <Property name="pattern">[%-5p][%d{yyyy-MM-dd HH:mm:ss,SSS}][%c{1}:%M:%L]: %msg%n</Property>
    </properties>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}"/>
            <ThresholdFilter level="debug"/>
        </Console>

        <Console name="echo" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg%n"/>
            <ThresholdFilter level="info"/>
        </Console>

        <RollingFile name="game" filename="logs/game.log" filepattern="logs/game.log.%i" append="true" >
            <PatternLayout pattern="${pattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" fileIndex="min"/>
            <ThresholdFilter level="info"/>
        </RollingFile>

        <RollingFile name="debug" filename="logs/debug.log" filepattern="logs/debug.log.%i" append="true" >
            <PatternLayout pattern="${pattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" fileIndex="min"/>
            <ThresholdFilter level="debug"/>
        </RollingFile>

        <RollingFile name="item" filename="logs/item.log" filepattern="logs/item.log.%i" append="true" >
            <PatternLayout pattern="${pattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" fileIndex="min"/>
            <ThresholdFilter level="ALL"/>
        </RollingFile>

        <RollingFile name="audit" filename="logs/audit.log" filepattern="logs/audit.log.%i" append="true" >
            <PatternLayout pattern="${pattern}" />
            <Policies>
                <SizeBasedTriggeringPolicy size="50 MB" />
            </Policies>
            <DefaultRolloverStrategy max="100" fileIndex="min"/>
            <ThresholdFilter level="ALL"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="console"/>
        </Root>
        <Logger name="com.it.br" level="info">
            <AppenderRef ref="game"/>
            <AppenderRef ref="debug"/>
        </Logger>
        <Logger name="com.zaxxer.hikari" level="info">
            <AppenderRef ref="game"/>
            <AppenderRef ref="debug"/>
        </Logger>
        <Logger name="MySQL" level="error">
            <AppenderRef ref="game"/>
            <AppenderRef ref="debug"/>
        </Logger>
        <Logger name="echo" level="info" additivity="false">
            <AppenderRef ref="echo"/>
        </Logger>
        <Logger name="item" level="info">
            <AppenderRef ref="item"/>
        </Logger>
        <Logger name="audit" level="info">
            <AppenderRef ref="audit"/>
        </Logger>
    </Loggers>
</Configuration>